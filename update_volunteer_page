from tkinter import *
from tkinter.ttk import *

master = Tk()
master.geometry("800x800")
master.configure(background="#7AC5CD")
master.title("sign up for volunteer project")
def openNewWindow():
    newWindow = Toplevel(master,background=	"#7AC5CD")
    newWindow.title("sign up for volunteer project")
    newWindow.geometry("800x300")
    Label(newWindow,
          text = "Thank you so much for signing up! we appreciate it !",background="#7AC5CD",font=("Times",25)).pack(pady=100)

label = Label(master,
              text="join us to Volunteer in any area you want and help youth at risk",
              background="#7AC5CD",font=("Times",20))
label.pack(pady=120)
btn = Button(master,
             text ="make the world a better place",command = openNewWindow)
btn.configure()
btn.pack(pady = 100)
mainloop()

























